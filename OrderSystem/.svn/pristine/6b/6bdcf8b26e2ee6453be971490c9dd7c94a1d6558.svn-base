<script>
import $http from "api/http.js"
export default {
  props: ['drawingData'],
  data() {
    return {
      LoadingText: "加载中...",
      PageIndex: 1,
      ImgList: [{
        name: 'hduiashgduidsauygsauydgasuygd',
        suffix: '.png'
      }],
      ImgUrl: ['http://pic.58pic.com/58pic/17/75/49/03r58PICTB5_1024.jpg','http://p4.music.126.net/CQdd046DsfAFklXyo6gGfg==/2942293117180306.jpg','http://pic.58pic.com/58pic/17/75/49/03r58PICTB5_1024.jpg','http://p4.music.126.net/CQdd046DsfAFklXyo6gGfg==/2942293117180306.jpg','http://pic.58pic.com/58pic/17/75/49/03r58PICTB5_1024.jpg','http://p4.music.126.net/CQdd046DsfAFklXyo6gGfg==/2942293117180306.jpg',],
      singleImg:{
        'max-height': '100%',
        'max-width': '100%'
      },
      multipleImg:{
          'width': '400px',
          'height': '400px'
      },
      progress: '10%',
      file: []

    }
  },
  mounted() {
    let _this = this
    let recordScroll = document.querySelectorAll('.drawing-box')
    recordScroll[0].addEventListener('scroll', function (e) {
      e = e || window.event
      let distance = e.target.scrollHeight - e.target.scrollTop - e.target.offsetHeight;
      if (distance < 30) {
        _this.PageIndex++
        _this.fetchDrawing(_this.PageIndex)
      }
    })
  },
  methods: {
    fetchDrawing(PageIndex) {
      $http.ajax("api/drawing").then(res => {
        console.log(res)
        res = res.data.data
        if (PageIndex == 1) {
          this.drawingData.uploadRecord = res.concat(res)
        }

        if (PageIndex == 2) {
          setTimeout(() => {
            this.drawingData.uploadRecord = res.concat(res).concat(res)
          }, 1000)
        }

        if (PageIndex >= 3) {
          setTimeout(() => {
            this.LoadingText = "没有更多"
          }, 1000)

        }
      })
    },
    printImg() {

      this.$router.push({ path: '/PrintImg'});

    },
    choseImg(url,index){
       console.log("图片url:" + url)
       console.log("图片index:" + index)
    },
    beforeImgUpload(file) {
      const isJPG = (file.type === 'image/jpeg') || (file.type === 'image/bmp') || (file.type === 'image/png');
      const isLt5M = file.size / 1024 / 1024 < 5;

      if (!isLt2M) {
        this.$message.error('上传图片大小不能超过 5MB!');
      }
      return isLt5M;
    },
    ImgChange(file, a) {
      console.log("选择了文件")
      this.ImgUrl = push(a[a.length - 1].url) 
      console.log(this.ImgList)
      this.ImgList[0] = a[a.length - 1]
    },
    ImgProgress(event, file, fileList) {
      console.log("img进度")
      console.log(event.percent)
      this.progress = event.percent.toFixed(2) + "%"
      console.log(file)

    },
    ImgSuccess(response, file, b) {
      console.log("上传图片成功")
    },
    ImgRemove(file, b) {
      console.log("移除文件")

    },
    beforeFileUpload(file) {
      const isJPG = (file.type === 'image/jpeg') || (file.type === 'image/bmp') || (file.type === 'image/png');
      const isLt2M = file.size / 1024 / 1024 < 100;

      if (!isLt2M) {
        this.$message.error('上传图片大小不能超过 100MB!');
      }
      return isLt2M;
    },
    handlePreview(file) {
      console.log("点击已上传文件")
    },
    handleRemove(file) {
      console.log("移除")
      console.log(file);
    },
    handleSuccess(response, file) {
      console.log("成功")
      console.log(response)
    },
    handleError(err, file) {
      console.log("成功")
    },
    handleProgress(event, file) {
      console.log("上传过程")
    },
    handleChange(file) {
      console.log("文件改变")
    },
    submitUpload() {
      //  console.log(this.$refs)
      this.$refs.upload.submit();
    }

  }

}
</script>



