<script>
import api from 'api/request.js'
// import $util from 'common/js/util.js'
import window from './enquirySheetDetailWindow.vue'
import importBox from './importBox.vue'
export default {
  // props: ['windowShow'],
  components: {
    'v-window': window,
    'v-importBox': importBox
  },
  data() {
    return {
      InfoShow: true,
      isShowImport: false,
      baseData: {
        inquiryorderid: 'P201705100004C02',
        orderstatus: '待报价',
        linkname: 'Ryan',
        telephone: '0755-12345660',
        createtime: '2017-05-13 17:39:28',
        asktime: '2016-09-21  08:50:08',
        g: '2016-09-21  08:50:08',
        facktime: '2016-09-21  08:50:08'
      },
      activeName: 'first',
      windowShow: false,
      tableDataIndex: 0,
      tableData: [{
        'companyid': '',
        'dealwithcost': null,
        'deliverytime': '',
        'factoryid': '',
        'head': null,
        'inquiryorderdetailid': '',
        'inquiryorderid': '',
        'iscando': null,
        'issendcost': null,
        'materialcost': null,
        'minamount': '',
        'orderamount': '',
        'pricenotax': null,
        'pricewithtax;': null,
        'productbrand': '',
        'productcode': '',
        'productmodel': '',
        'productname': '',
        'producttype': '',
        'remark': '',
        'serialno': 0,
        'taxamount': null,
        'taxrate': '',
        'unit': '',
        'willorderdetailid': '',
        'workcost': null
      }],
      options: [{
        text: '13%',
        value: ''
      }],
      dialogVisible: false,
      dialogTitle: '',
      dialogData: {},
      pricenotaxIndex: 0,  // 未税单价index
      isDeliverytime: true,
      isImportPricenotax: true
    }
  },
  beforeCreate() { },
  created() {
    this.$store.state.adminleftnavnum = '/EnquirySheet/enquirySheet'
    this.fetchData()
  },
  beforeUpdate() { },
  updated() { },
  beforeMount() { },
  mounted() {
    // let dom = document.querySelectorAll('.deliverytime')
    // let dom2 = document.getElementsByClassName('deliverytime')
    // dom.appendChild('*')
    // console.log(dom)
    // console.log(dom2)
  },
  filters: {},
  methods: {
    ClickRefresh() {
      this.fetchData({ refresh: true })
    },
    ClickQuoted() {
      let param = { inquiryorderid: this.$route.params.inquiryorderid }
      api.inquiryorder.confirmwillorder(param).then(res => {
        this.$message.success('报价成功')
      })
    },
    ClickSave() {
      let copeData = this.tableData
      // 判断是否符合保存条件
      for (let i = 0; i < copeData.length; i++) {
        if (copeData[i].iscando) {
          if (!copeData[i].deliverytime || !copeData[i].pricewithtax) {
            this.$message.error('能做的产品，请您填写货期和含税单价')
            return
          }
        }
      }
      // 深层拷贝
      copeData = []
      for (let i = 0; i < this.tableData.length; i++) {
        if (typeof this.tableData[i] === 'object') {
          copeData[i] = {}
          for (let j in this.tableData[i]) {
            if (j == 'iscando') {
              copeData[i][j] = this.tableData[i][j] ? '1' : '0'
            } else if (j == 'issendcost') {
              copeData[i][j] = this.tableData[i][j] ? 1 : 0
            } else {
              copeData[i][j] = this.tableData[i][j]
            }
          }
        }
      }
      let param = {
        inquiryorderid: this.$route.params.inquiryorderid,
        detailList: copeData
      }
      api.inquiryorder.updateinquiryorder(param).then(res => {
        if (res.data.code == 0 || res.data.code == 200) {
          this.$message.success('保存成功')
        } else {
          this.$message.error(res.data.message)
        }
        // this.fetchData()
      })
    },
    ClickDownDrawing() {
      let param = { inquiryorderid: this.$route.params.inquiryorderid }
      // let param = { inquiryorderid: 201708041472 }
      api.inquiryorder.downloadattachment(param).then(res => {
        if (res.data.code == 200) {
            location.href = res.data.data
        }
      })
    },
    ClickProductcode(index) {
      this.windowShow = true
      this.tableDataIndex = index
    },
    checkedStatu(satau) {
      if (satau === '0') {
        return '待报价'
      } else if (satau === '1') {
        return '已报价'
      } else if (satau === '2') {
        return '已作废'
      }
    },
    handleClick() { },
    ClickPricenotax(row, index) {
      console.log(11111)
      // this.dialogTitle = row.productcode
      // this.dialogData = row
      this.dialogVisible = true
      console.log(row)
      console.log(index)
      this.pricenotaxIndex = index
    },
    ClickDialogConfirm() {
      let data = this.tableData
      let index = this.pricenotaxIndex
      data[index].pricenotax = data[index].materialcost + data[index].workcost + data[index].dealwithcost
      this.dialogVisible = false
    },
    // 是否输入货期
    isImportDeliverytime(flag) {
      this.isDeliverytime = flag
      return flag
    },
    // 是否输入未税单价
    isImportPricewithtaxFnc(flag) {
      this.isImportPricenotax = flag
      return flag
    },
    handleClose() {
      this.dialogVisible = false
    },
    handleSelectionChange() {
      console.log('111')
    },
    fetchData(obj) {
      let param = { inquiryorderid: this.$route.params.inquiryorderid }
      if (obj && obj.data) {
        param = obj.data
      }
      api.inquiryorder.getinquiryorderbyid(param).then(res => {
        let data = res.data.data
        this.baseData = data
        if (obj && obj.method) {
          obj.method()
        }
        // this.$message({
        //   message: '恭喜你，这是一条成功消息',
        //   type: 'success'
        // })
        for (let i = 0; i < data.detailList.length; i++) {
          data.detailList[i].iscando = data.detailList[i].iscando == '1' ? true : false
          data.detailList[i].issendcost = data.detailList[i].issendcost == '1' ? true : false
        }
        this.tableData = data.detailList
        for (let i = 0; i < res.data.taxratelist.length; i++) {
              res.data.taxratelist[i].text = res.data.taxratelist[i].value + '%'
        }
        this.options = res.data.taxratelist
        console.log(this.options)
        if (obj && obj.save) {
          this.$message.success('保存成功')
        }
        if (obj && obj.refresh) {
          this.$message.success('刷新成功')
        }
      })
    },
    ClickImOutport() {
      console.log(this.isShowImport)
      this.isShowImport = true
    },
    rowBackground(row, index) {
      if (row.statu === '已作废') {
        return 'rowBgColor-d'
      }
      if (index % 2) {
        return 'rowBgColor'
      }
    }
  },
  computed: {},
  watch: {}
}
</script>

