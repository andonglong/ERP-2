export function fetch(url, params) {
    return new Promise((resolve, reject) => {
      axios.post(url, params)
			      .then(response => {
			          resolve(response.data);
			      }, err => {
			      	console.log(err)
			          reject(err);
			      })
			      .catch((error) => {
			         reject(error)
			      })
    })
}


export default {
//	登录
	Login(params) {
     return fetch('erp/user/login', params)
	},
	//获取订单列表
	getorders(params) {
	 	return fetch('erp/order/getorders', params)
	}
}
