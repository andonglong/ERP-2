  beforeUpdate() { },
  updated() { },
  beforeMount() { },
  mounted() { },
  filters: {},
  methods: {
    changeDate(val) {
      console.log('-----')
      if (!$util.checkDateDaterange(val)) {
        this.$notify({
          title: '警告',
          message: '日期格式错误，请重新输入',
          type: 'warning',
          duration: 1500
        })
        return
      }
      let data = val.split(' - ')
      this.searchForm.startcreattime = data[0]
      this.searchForm.endcreattime = data[1]
      console.log(this.searchForm)
    },
    rowBackground(row, index) {
      if (row.statu === '已作废') {
        return 'rowBgColor-d'
      }
      if (index % 2) {
        return 'rowBgColor'
      }
    },
    filterTag(value, row) {
      return row.orderstatus === value
    },
    quotedStatu(satau) {
      if (satau === '待报价') {
        return 'icon-statu-a'
      } else if (satau === '已报价') {
        return 'icon-statu-b'
      } else if (satau === '已询价') {
        return 'icon-statu-c'
      } else {
        return 'icon-statu-d'
      }
    },
    // pagination methods
    handleSizeChange(val) {
      console.log(`每页 ${val} 条`)
      this.searchForm.pageindex = 1
      this.searchForm.pagesize = val
      this.fetchData()
    },
    handleCurrentChange(val) {
      console.log(`当前页: ${val}`)
      this.searchForm.pageindex = val
      this.fetchData()
    },
    ClickMark(index, row) {
      console.log(row)
      let param = { inquiryorderid: row.inquiryorderid }
      if (!row.ismark) {
        api.inquiryorder.markbyid(param).then(res => {
          console.log(res)
          this.tableData[index].ismark = !row.ismark
        })
      } else {
        api.inquiryorder.unmarkbyid(param).then(res => {
          console.log(res)
          this.tableData[index].ismark = !row.ismark
        })
      }
    },
    // ClickUrgent(index, isurgent) {
    //   this.tableData[index].isurgent = !isurgent
    // },
    toquotationDetail(id) {
      this.$router.push({
        path: '/EnquirySheet/EnquirySheetDetail/' + id
      })
    },
    submitSearchForm() {
      this.fetchData()
    },
    resetSearchForm(formName) {
      this.$refs[formName].resetFields()
    },
    handleClickTabs(tabs) {
      console.log('name:' + tabs.name)
      if (tabs.name == 'all') {
        console.log('全部')
        this.searchForm.orderstatus = ''
      }
      if (tabs.name == 0) {
        console.log('待报价')
        this.searchForm.orderstatus = 0
      }
      if (tabs.name == 1) {
        console.log('已报价')
        this.searchForm.orderstatus = 1
      }
      this.searchForm.pageindex = 1
      this.fetchData()
    },
    handRefresh() {
      this.fetchData()
    },
    fetchData(data) {
      let param = this.searchForm
      if (data) {
        param = data
      }
      console.log('参数')
      console.log(param)
      api.inquiryorder.getinquiryorders(param).then(res => {
        console.log(res)
        let data = res.data
        // this.tableData = data.datalist
        this.total = data.datacount
        console.log(this.total)
        this.waitQuoteNum = data.statuscount && data.statuscount[0].count
        this.QuotedNum = data.statuscount && res.statuscount[1].count
      })
    }
  },
  computed: {},
  watch: {
    region() {
      console.log('状态改变了：' + this.region)
    }
  }
}
