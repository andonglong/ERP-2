        <div slot="footer" class="dialog-footer">
          <el-button @click="Add_cancel()">取 消</el-button>
          <el-button type="primary" @click="Add_confirm('dialogformData')">{{ dialogTitle == "新增设备" ? '新增':'修改'}}</el-button>
