<script>
// import $util from 'common/js/util.js'
import $util from 'common/js/util.js'
export default {
    data() {
        return {
            throttleVar: {
                search: true
            },
            searchForm: {
                devicetype: '',
                devicename: '',
                suppliername: '',
                devicemodel: '',
                devicebrand: '',
                deviceprecision: '',
                deviceprecisiondegree: '',
                worktimestart: '',
                worktimeend: ''
            },
            worktime: '',
            options: {
                devicetype: [{
                    number: '',
                    name: '全部'
                }],
                devicename: [{
                    number: 'C',
                    name: '已审核'
                }],
                suppliername: [{
                    number: '',
                    name: '全部'
                }],
                forbidstatus: [{
                    number: '',
                    name: '全部'
                }],
                deviceprecision: [{
                    number: '',
                    name: '全部'
                }],
                deviceprecisiondegree: [{
                    number: '',
                    name: '全部'
                }]
            },
            activeName: '',
            tableData: [
                {
                    number: 'number',
                    id: '4848484'
                }
            ],
            open: false,
            filters: [{
                value: '待报价',
                text: '待报价'
            }, {
                value: '已报价',
                text: '已报价'
            }, {
                value: '已询价',
                text: '已询价'
            }, {
                value: '已作废',
                text: '已作废'
            }],
            form: {
                region: ''
            },
            ruleForm: {
                name: '',
                region: '',
                date1: '',
                date2: '',
                delivery: false,
                type: [],
                resource: '',
                desc: ''
            },
            // pagination param
            currentPage: 1,
            pageSizes: [10, 20, 30, 50, 100, 200, 500, 1000],
            currentPageSize: 10,
            totalCount: 10,
            initPageIndex: 1,
            initPageSize: 10
        }
    },
    beforeCreate() { },
    created() {
        this.$store.state.adminleftnavnum = '/List/equipmentList'
        this.$api.equipment.addSupplierdevice().then(res => {
            console.log(res)
            if (res.data.code == 200) {
                res.data.deviceName.unshift({ name: '全部', number: '' })
                this.options.devicename = res.data.deviceName

                res.data.devicetype.unshift({ name: '全部', number: '' })
                this.options.devicetype = res.data.devicetype

                res.data.devicePrecision.unshift({ name: '全部', number: '' })
                this.options.deviceprecision = res.data.devicePrecision

                res.data.machiningprecision.unshift({ name: '全部', number: '' })
                this.options.deviceprecisiondegree = res.data.machiningprecision
            }
        })
        this.fetchData()
    },
    beforeUpdate() { },
    updated() { },
    beforeMount() { },
    mounted() { },
    filters: {},
    methods: {
        changeWorktime(val) {
            let data = val.split(' - ')
            this.searchForm.worktimestart = data[0]
            this.searchForm.worktimeend = data[1]
        },
        rowBackground(row, index) {
            if (row.statu === '已作废') {
                return 'rowBgColor-d'
            }
            if (index % 2) {
                return 'rowBgColor'
            }
        },
        toCustomerDetail(id) {
            this.$router.push({ path: '/Manage/Customer/CustomerDetail/' + id })
        },
        // pagination methods
        handleSizeChange(val) {
            this.currentPage = this.initPageIndex
            this.currentPageSize = val
            this.fetchData()
        },
        handleCurrentChange(val) {
            this.currentPage = val
            this.fetchData()
        },
        submitSearchForm() {
            this.fetchData({ search: true })
        },
        resetSearchForm(formName) {
            this.$refs[formName].resetFields()
            this.worktime = ''
        },
        handRefresh() {
            this.currentPage = this.initPageIndex
            this.fetchData({ refresh: true })
        },
        ClickExport() {
            let param = this.searchForm
            this.$api.equipment.excelExp(param).then(res => {
                if (res.data.code == 200) {
                    location.href = res.data.code
                }
            })
        },
        fetchData(obj) {
            let param = this.searchForm
            param.pageindex = this.currentPage
            param.pagesize = this.currentPageSize
            if (obj && obj.params) {
                param = obj.params
            }
            this.$api.equipment.supplierdeviceList(param).then(res => {
                // console.log(res.data.datalist)
                console.log('数据')
                console.log(res)
                if (res.data.code == 200) {
                    for (let i = 0; i < res.data.datalist.length; i++) {
                        res.data.datalist[i].worktime = $util.DateFormat(res.data.datalist[i].worktime, 'yyyy-MM-dd')
                    }
                    this.tableData = res.data.datalist
                    this.totalCount = res.data.datasum

                    if (obj && obj.search) {
                      this.$message.success('查询成功')
                    }
                    if (obj && obj.refresh) {
                        this.$message.success('刷新成功')
                    }
                } else {
                    this.$message.error(res.data.data)
                }
            })
        }
    },
    computed: {},
    watch: {
        region() {
            console.log('状态改变了：' + this.region)
        }
    }
}
</script>

