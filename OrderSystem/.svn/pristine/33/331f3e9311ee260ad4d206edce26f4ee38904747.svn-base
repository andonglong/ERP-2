<script>
import api from 'api/request'
import $util from 'common/js/util.js'
export default {
  data () {
    return {
      form: {
        companyid: '',
        factoryid: '',
        willorderid: '',
        quotationid: '',
        status: '',
        inquiryData: '',
        endinquirytime: null,
        startinquirytime: null,
        engineer: '',
        buyer: '',
        productmodel: '',
        pageindex: 1,
        pagesize: 10
      },
      statuOptions: [{
        value: '',
        label: '全部'
      }, {
        value: '0',
        label: '待报价'
      }, {
        value: '1',
        label: '已向供应商询价'
      }, {
        value: '2',
        label: '供应商已报价'
      }, {
        value: '3',
        label: '已筛选供应商报价'
      }, {
        value: '4',
        label: '已确认建议售价'
      }, {
        value: '5',
        label: '已作废'
      }],
      show: false,
      activeName: 'first',

      tableData: [],
      filters: [{
        value: '0',
        text: '待报价'
      }, {
        value: '1',
        text: '已向供应商询价'
      }, {
        value: '2',
        text: '供应商已报价'
      }, {
        value: '3',
        text: '已筛选供应商报价'
      }, {
        value: '4',
        text: '已确认建议售价'
      }, {
        value: '5',
        text: '已作废'
      }],
      filters2: [],
      defaultSort: {
        prop: 'date',
        order: 'descending'
      },
      count1: 0,
      count2: 0,

      listLoading: false,
      multipleSelection: [],

      // 分页
      page_sizes: [10, 20, 30, 50, 100, 200, 500, 1000],
      Total: 100, // 总条数

      dialogVisible: false,
      iconTitle: true, // 提醒供应商报价返回状态
      quoteDetail: false
    }
  },
  methods: {
    inquiryDataChange (val) {
      if (!$util.checkDateDaterange(val)) {
        this.$notify({
          title: '警告',
          message: '日期格式错误，请重新输入',
          type: 'warning',
          duration: 1500
        })
        return
      }
      let data = val.split(' - ')
      this.form.startinquirytime = data[0]
      this.form.endinquirytime = data[1]
    },
    // 查询
    search () {
      this.getWillorders(this.form)
    },
    // 重置
    resetForm (formName) {
      this.$refs[formName].resetFields()
    },
    // 导航切换
    handleClick (tab, event) {
      this.$refs['form'].resetFields()
      if (tab.index === 0) {
        this.form.status = ''
      } else if (tab.index === 1) {
        this.form.status = 0
      } else {
        this.form.status = 1
      }
      this.getWillorders(this.form)
    },
    // table
    handleSelectionChange (val) {
      this.multipleSelection = val
    },
    filterTag (value, row) {
      return row.status === value
    },
    filterTag2 (value, row) {
      return row.engineer === value
    },
    toquotationDetail (id) {
      this.$router.push({
        path: '/Quotation/quotationDetail/' + id
      })
    },
    selectable (row, index) {
      return row.statu !== '已作废'
    },
    // 刷新
    handRefresh () {
      let parms = {
        companyid: this.form.companyid,
        factoryid: this.form.factoryid
      }
      this.getWillorders(parms)
    },
    // 提醒供应商报价
    handTipSupplier () {
      if (this.multipleSelection.length < 1) {
        this.$notify({
          title: '温馨提示',
          message: '请勾选报价需求单',
          type: 'warning',
          duration: 1500,
          offset: 60
        })
      } else {
        this.dialogVisible = true
        this.getWillorders(this.form)
      }
      // this.dialogVisible = true
    },
    // 列表区
    tableRowClassName (row, index) {
      if (row.statusTxt === '已作废') {
        return 'info-row-color'
      } else {
        let className = ''
        for (var i = 0; i < this.multipleSelection.length; i++) {
          if (this.multipleSelection[i] == row) {
            className = 'info-row-9ed'
            break
          }
        }
        return className
      }
    },
    // 分页
    handleSizeChange (val) {
      this.form.pagesize = val
    },
    handleCurrentChange (val) {
      this.form.pageindex = val
    },
    // 提示层
    handleClose () {
      this.dialogVisible = false
    },
    quotedStatu (status) {
      if (status === '待报价') {
        return 'icon-statu-a'
      } else if (status === '供应商已报价' || status === '已向供应商询价') {
        return 'icon-statu-b'
      } else if (status === '已筛选供应商报价' || status === '已确认建议售价') {
        return 'icon-statu-c'
      } else {
        return 'icon-statu-d'
      }
    },
    // 获取数据
    getWillorders (parms) {
      let _t = this
      this.listLoading = true
      api.willorders.getwillorders(parms).then(res => {
        if (res.data.code == 200) {
          _t.listLoading = false
          let obj = _t.check_Willorders(res.data.datalist)
          _t.tableData = obj.tableData // 列表
          _t.filters2 = obj.personArr
          _t.Total = res.data.datacount // 分页总数
          if (res.data.statuscount.length > 0) {
            res.data.statuscount.map((value, index, arr) => {
              if (value.status == 1) {
                _t.count1 = value.count
              } else {
                _t.count2 = value.count
              }
            })
          }
        }
      })
    },
    check_Willorders (data) {
      let personArr = []
      data.map((value, index, arr) => {
        let statusTxt = ''
        value.inquirytime = $util.DateFormat(value.inquirytime, 'yyyy-MM-dd hh:mm:ss')
        value.remindtime = $util.DateFormat(value.remindtime, 'yyyy-MM-dd hh:mm:ss')
        personArr.push(value.engineer)
        switch (value.status) {
          case '0':
            statusTxt = '待报价'
            break
          case '1':
            statusTxt = '已向供应商询价'
            break
          case '2':
            statusTxt = '供应商已报价'
            break
          case '3':
            statusTxt = '已筛选供应商报价'
            break
          case '4':
            statusTxt = '已确认建议售价'
            break
          case '5':
            statusTxt = '已作废'
            break
        }
        value.statusTxt = statusTxt
      })
      personArr = $util.arrayToHeavy(personArr) // 名字去重
      personArr = this.check_person(personArr) // 格式化名字
      return {
        tableData: data,
        personArr: personArr
      }
    },
    check_person (arr) {
      let newArr = []
      arr.map((value, index, arr) => {
        newArr.push({
          text: value,
          value: value
        })
      })
      return newArr
    }
  },
  computed: {
  },
  created () {
    let userInfo = JSON.parse(sessionStorage.getItem('userInfo'))
    if (userInfo == null) {
      this.$router.push('/login')
    }
    this.form.companyid = userInfo.companyid
    this.form.factoryid = userInfo.factoryid
    let parms = {
      companyid: userInfo.companyid,
      factoryid: userInfo.factoryid
    }
    this.getWillorders(parms)
    this.$store.state.adminleftnavnum = '/Quotation/quotation'
  }
}
</script>

